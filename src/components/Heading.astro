---
import { cn } from "../utils/cn";

type HeadingTag = "h1" | "h2" | "h3" | "h4" | "p";
type HeadingStyle = "h1" | "h2" | "h3" | "h4";

type Props = {
  as?: HeadingTag;
  class?: string;
  style: HeadingStyle;
};

const {
  as,
  class: className = "",
  style,
  ...rest
} = Astro.props as Props;

const styleClasses: Record<HeadingStyle, string> = {
  h1: "text-6xl leading-none font-thin",
  h2: "text-3xl leading-tight font-thin",
  h3: "text-base leading-snug font-light",
  h4: "text-sm font-medium tracking-[0.35em] uppercase",
};

const Tag = as ?? style;
const effectiveStyle = style;
const classes = cn(styleClasses[effectiveStyle], className);
---

<Tag class={classes} {...rest}>
  <slot />
</Tag>
