---
import { cn } from "../utils/cn";

type PanelTag = "section" | "article" | "aside" | "div";
type PanelBackground = "primary" | "secondary" | "accent";

type Props = {
  as?: PanelTag;
  class?: string;
  background: PanelBackground;
};

const {
  as: Tag = "section",
  class: className = "",
  background,
  ...rest
} = Astro.props as Props;

const backgroundClasses: Record<PanelBackground, string> = {
  primary: "bg-(--brand-bg)",
  secondary: "bg-(--image-bg)",
  accent: "bg-(--description-bg)",
};

const classes = cn(backgroundClasses[background], "p-6 sm:p-12", className);
---

<Tag class={classes} {...rest}>
  <slot />
</Tag>
