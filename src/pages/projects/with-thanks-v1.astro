---
import { Image } from "astro:assets";
import { withThanksProject as project } from "../../data/projects/with-thanks";
import ProjectLayout from "../../layouts/ProjectLayout.astro";
---

<ProjectLayout title={`${project.title} — Case Study`}>
	<main class="panel--01 min-h-screen bg-black">
			<div class="grid gap-px bg-black">
				<section class="bg-(--brand-bg) p-6 sm:p-10">
					<a href="/" class="inline-flex items-center gap-2 text-[0.7rem] font-semibold uppercase tracking-[0.22em] text-(--brand-text)">
						<span>←</span>
						Back
					</a>
					<div class="mt-8 grid gap-6 sm:grid-cols-[1.4fr_0.6fr] sm:items-end">
						<h1 class="text-[clamp(2.2rem,6vw,4.5rem)] font-semibold uppercase tracking-[-0.02em] text-(--brand-text)">
							{project.title}
						</h1>
						<p class="text-[0.9rem] font-medium uppercase tracking-[0.22em] text-(--brand-text)">
							{project.role}
						</p>
					</div>
					<p class="mt-6 max-w-[60ch] text-[1rem] leading-[1.5] text-(--brand-text)">
						{project.tagline}
					</p>
				</section>

				<section class="grid gap-px bg-black sm:grid-cols-[1fr_2fr]">
					<div class="bg-(--description-bg) p-6 sm:p-10">
						<h2 class="text-[0.9rem] font-semibold uppercase tracking-[0.22em] text-(--description-text)">Overview</h2>
						<p class="mt-4 text-[1rem] leading-[1.6]">{project.overview}</p>
						<p class="mt-4 text-[1rem] leading-[1.6]">{project.overviewDetail}</p>
					</div>
					<div class="bg-(--image-bg) p-6 sm:p-10">
						<div class="grid gap-4">
							{project.gallery.slice(0, 3).map((image) => (
								<div class="overflow-hidden rounded-[2rem] bg-(--image-frame-bg)">
									<Image
										src={image.src}
										alt={image.alt}
										width={1024}
										height={1536}
										sizes="(min-width: 640px) 66vw, 100vw"
										class="h-full w-full object-cover"
										loading="lazy"
										decoding="async"
									/>
								</div>
							))}
						</div>
					</div>
				</section>

				<section class="grid gap-px bg-black sm:grid-cols-3">
					<div class="bg-(--description-bg) p-6 sm:p-10">
						<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em]">Scope</h3>
						<ul class="mt-4 space-y-2 text-[0.95rem] leading-[1.5]">
							{project.scope.map((item) => (
								<li>{item}</li>
							))}
						</ul>
					</div>
					<div class="bg-(--description-bg) p-6 sm:p-10">
						<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em]">Goals</h3>
						<ul class="mt-4 space-y-2 text-[0.95rem] leading-[1.5]">
							{project.goals.map((item) => (
								<li>{item}</li>
							))}
						</ul>
					</div>
					<div class="bg-(--description-bg) p-6 sm:p-10">
						<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em]">Outcomes</h3>
						<ul class="mt-4 space-y-2 text-[0.95rem] leading-[1.5]">
							{project.outcomes.map((item) => (
								<li>{item}</li>
							))}
						</ul>
					</div>
				</section>

				<section class="bg-(--image-bg) p-6 sm:p-10">
					<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em] text-(--description-text)">Process</h3>
					<div class="mt-6 grid gap-4 sm:grid-cols-5">
						{project.process.map((step, index) => (
							<div class="rounded-[1.5rem] bg-(--image-frame-bg) p-4">
								<p class="text-[0.75rem] font-semibold uppercase tracking-[0.2em] text-(--description-text)">
									Step {index + 1}
								</p>
								<p class="mt-3 text-[0.95rem] leading-[1.4]">{step}</p>
							</div>
						))}
					</div>
				</section>

				<section class="grid gap-px bg-black sm:grid-cols-[2fr_1fr]">
					<div class="bg-(--description-bg) p-6 sm:p-10">
						<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em]">Links</h3>
						<div class="mt-4 flex flex-wrap gap-4 text-[0.9rem] font-semibold uppercase tracking-[0.18em]">
							<a class="underline underline-offset-4" href={project.links.live}>Live site</a>
							<a class="underline underline-offset-4" href={project.links.repo}>Repo</a>
							<a class="underline underline-offset-4" href={project.links.writeup}>Write‑up</a>
						</div>
					</div>
					<div class="bg-(--brand-bg) p-6 sm:p-10 text-(--brand-text)">
						<h3 class="text-[0.8rem] font-semibold uppercase tracking-[0.22em]">Next</h3>
						<div class="mt-4 space-y-3">
							{project.related.map((item) => (
								<a href={item.href} class="block text-[1rem] font-semibold uppercase tracking-[0.18em] underline underline-offset-4">
									{item.label}
								</a>
							))}
						</div>
					</div>
				</section>
			</div>
	</main>
</ProjectLayout>
