---
type HeadingTag = "h1" | "h2" | "h3" | "h4";
type HeadingStyle = "h1" | "h2" | "h3" | "h4";

type Props = {
  as?: HeadingTag;
  class?: string;
  headingStyle: HeadingStyle;
};

const {
  as,
  class: className = "",
  headingStyle,
  ...rest
} = Astro.props as Props;

const styleClasses: Record<HeadingStyle, string> = {
  h1: "text-6xl leading-none font-thin",
  h2: "text-3xl leading-tight font-thin",
  h3: "text-base leading-snug font-light",
  h4: "text-sm font-medium tracking-[0.35em] uppercase",
};

const Tag = as ?? headingStyle;
const effectiveStyle = headingStyle;
const classes = [styleClasses[effectiveStyle], className].filter(Boolean).join(" ");
---

<Tag class={classes} {...rest}>
  <slot />
</Tag>
