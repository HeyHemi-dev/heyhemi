---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { class: className, ...rest } = Astro.props;
const baseClass =
  "inline-flex items-center px-2 py-1 text-[0.64rem] font-semibold uppercase tracking-[0.22em] text-(--nav-text) underline-offset-4 decoration-2 hover:underline";
---

<a class:list={[baseClass, className]} {...rest}>
  <slot />
</a>
